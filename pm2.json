{
	"apps": {
		"name": "mowork_app_server",
		"script": "./bin/www",
		"cwd": "./",
		"args": "",
		"interpreter": "",
		"interpreter_args": "",
		"watch": false,
		"ignore_watch": ["node_modules", "logs", "public"],
		"exec_mode": "cluster_mode",
		"instances": 4,
		"max_memory_restart": 8,
		"error_file": "./logs/app-err.log",
		"out_file": "./logs/app-out.log",
		"merge_logs": true,
		"log_date_format": "YYYY-MM-DD HH:mm:ss",
		"min_uptime": "60s",
		"max_restarts": 30,
		"autorestart": true,
		"cron_restart": "",
		"restart_delay": 5000,
		"env": {
			"NODE_ENV": "development"
		},
		"env_production": {
			"NODE_ENV": "production"
		}
	}
}
